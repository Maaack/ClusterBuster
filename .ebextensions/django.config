option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "clusterbuster.settings"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: clusterbuster/wsgi.py
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"

container_commands:
  01_collectstatic:
    Command:"source /opt/python/run/venv/bin/activate && python ClusterBuster/manage.py collectstatic --noinput"
  02_migrate:
    Command:"source /opt/python/run/venv/bin/activate && python ClusterBuster/manage.py migrate --noinput"
  leader_only: true